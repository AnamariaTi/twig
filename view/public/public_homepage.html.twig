{# view/public/public_homepage.html.twig #}
{% extends 'template.html.twig' %}
{# le chemin part toujours de ../view, car on l'a
appelmé comme ça lors de l'instanciation de Twig dans index.php
    $loader = new FilesystemLoader('../view');
#}

{% block title %}{{ parent() }} | Homepage{% endblock %}
{% block categ %}
    {% for item in mesSections %}
    <li class="nav-item"><a class="nav-link" href="{{ base_url }}section/{{ item.thesectionslug }}">{{ item.thesectiontitle }}</a></li>
    {% endfor %}
{% endblock %}
{% block content %}
<section class="py-5 border-bottom" id="features">
    <div class="container px-5 my-5">
                <div class="row gx-5">
                    {% for item in mesArticles %}
                    <div class="col-lg-4 mb-5 mb-lg-0">
                        <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-collection"></i></div>
                        <h2 class="h4 fw-bolder">{{ item.thearticletitle }}</h2>
                        <p>{{ item.thearticleresume }}</p>
                        <a class="text-decoration-none" href="{{ base_url }}article/{{ item.thearticleslug }}">
                            Lire la suite
                            <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                    {% endfor %}
                </div>
        </div>


</section>
{% endblock %}

